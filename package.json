{
  "name": "prefresh",
  "scripts": {
    "build": "yarn workspace @prefresh/snowpack build && yarn workspace @prefresh/vite build && yarn workspace @prefresh/utils build",
    "lint": "eslint src",
    "test": "jest --clearCache && jest --runInBand --forceExit --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoviDeCroock/prefresh.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoviDeCroock/prefresh/issues"
  },
  "authors": [
    "Jovi De Croock <decroockjovi@gmail.com>"
  ],
  "homepage": "https://github.com/JoviDeCroock/prefresh#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.6",
    "@changesets/cli": "^2.8.0",
    "eslint": "5.15.1",
    "eslint-config-developit": "^1.1.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-react": "7.12.4",
    "fs-extra": "^9.0.1",
    "husky": "^3.0.9",
    "jest": "^26.4.2",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "puppeteer": "^5.2.1",
    "yarn-deduplicate": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "developit",
      "prettier"
    ],
    "rules": {
      "prefer-rest-params": 0,
      "prefer-spread": 0,
      "no-cond-assign": 0
    }
  },
  "eslintIgnore": [
    "dist",
    "node_modules",
    "test"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "useTabs": true,
    "tabWidth": 2
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
